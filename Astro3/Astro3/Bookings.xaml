<Page x:Class="Astro3.Bookings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Astro3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Bookings">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images\background_image.jpg" Stretch="UniformToFill" Opacity=".10"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <Calendar Height="170" 
                  HorizontalAlignment="Left" 
                  Margin="60,50,0,0" 
                  Name="calCalendar" 
                  VerticalAlignment="Top" 
                  Width="180"/>

        <StackPanel Grid.Row="0" 
                    Grid.Column="1"    
                    HorizontalAlignment="Center" 
                    Margin="0,50,0,20">
            <Button Content="Book" Name="btnBook" Height="26" Width="100" Margin="0,20" Click="btnBook_Click" />
            <Button Content="Delete" Name="btnDelete" Height="26" Width="100" Margin="0,20" Click="btnDelete_Click" />
            <Button Content="Recurrence" Name="btnRecurrence" Height="26" Width="100" Margin="0,20" Click="btnRecurrence_Click" />

        </StackPanel>


        <StackPanel Name="stkBookingDetails" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" Visibility="Visible">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="70*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="16*"/>
                    <RowDefinition Height="16*"/>
                    <RowDefinition Height="16*"/>
                    <RowDefinition Height="16*"/>
                    <RowDefinition Height="16*"/>
                    <RowDefinition Height="16*"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="1" Grid.Column="2" Content="Available slots"/>
                <ComboBox Grid.Row="4" Grid.Column="1" Width="150">
                    <ComboBoxItem Content="5:00 PM - 6:00 PM"/>
                    <ComboBoxItem Content="6:00 PM - 7:00 PM"/>
                    <ComboBoxItem Content="7:00 PM - 8:00 PM"/>
                    <ComboBoxItem Content="8:00 PM - 9:00 PM"/>
                    <ComboBoxItem Content="9:00 PM - 10:00 PM"/>
                    <ComboBoxItem Content="10:00 PM - 11:00 PM"/>
                    <ComboBoxItem Content="11:00 PM - 12:00 AM"/>
                </ComboBox>


            </Grid>


        </StackPanel>

    </Grid>
</Page>
